<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_raw">

    <LinearLayout
        android:id="@+id/topbar_beans_list"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/brown_light_roast">

        <TextView
            android:id="@+id/title_beans_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/registered_beans"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar_beans_list"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_rawbeans_beans_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/text_rawbeans_beans_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/rawbeans"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    />

                <Button
                    android:id="@+id/button_beans_list_to_rawbeans_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/register_rawbeans"
                    android:fontFamily="serif"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/brown_city_roast"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_rawbeans_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="60dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_roastbeans_beans_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/text_roastbeans_beans_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/roastbeans"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    />

                <Button
                    android:id="@+id/button_beans_list_to_roastbeans_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/register_roastbeans"
                    android:fontFamily="serif"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/brown_city_roast"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_roastbeans_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="60dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>